@{
    ViewData["Title"] = "Community Chat";
}

<div class="container-fluid d-flex flex-column  text-light" style="height: calc(100vh - 80px);">
    <div class="py-3 text-center">
        <h3>Community Chat</h3>
    </div>

    <ul id="messagesList" class="list-group overflow-auto flex-grow-1 px-3 mb-2">
        
    </ul>

    <div class="input-group p-3 border-top">
        <input type="text" id="messageInput" class="form-control" placeholder="Type your message..." />
        <button id="sendButton" class="btn btn-light">Send</button>
    </div>
</div>

<script src="~/Microsoft/signalr/signalr.min.js"></script>
<script src="~/js/chat.js"></script>



<script>
    window.currentUsername = "@ViewBag.Uname"; 
</script>
