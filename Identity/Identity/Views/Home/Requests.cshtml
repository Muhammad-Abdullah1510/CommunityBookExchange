@model List<Identity.Models.Request>

@{
    ViewData["Title"] = "Requests";
}

<h1 class="text-white text-center">Requests</h1>
<br />

@if (Model != null && Model.Any())
{
    <div class="container d-flex justify-content-center">
        <div class="col-md-7">
            @for (int i = 0; i < Model.Count; i++)
            {
                var request = Model[i];
                var username = ViewBag.Usernames[i];

                <div class="alert text-light bg-dark d-flex justify-content-between align-items-center" role="alert">
                    <span>@username has requested to rent the book "@request.BookName" with id no @request.BookId</span>
                    <div>
                        <a href="/Home/Rejected?requestId=@request.Id" class="btn btn-sm bg-danger text-white">Reject</a>
                        <a href="/Home/Accepted?requestId=@request.Id" class="btn btn-sm bg-success text-white">Accept</a>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <h3 class="text-center text-light">No requests found.</h3>
}
