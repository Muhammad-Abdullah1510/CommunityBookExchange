@{
    ViewData["Title"] = "Edit Profile Picture";
}

<div class="container d-flex flex-column align-items-center justify-content-center mt-5" style="height: calc(100vh - 200px);">
    <h2 class="text-light text-center mb-4">Upload a New Profile Picture</h2>

    <form asp-action="UploadProfilePicture" asp-controller="Home" method="post" enctype="multipart/form-data" class="w-50">
        <div class="mb-3 text-center d-flex justify-content-center">
            <input type="file" class="form-control text-center" name="imageFile" accept="image/*" required style="max-width: 325px;">
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn bg-light text-dark">Upload</button>
        </div>
    </form>
</div>
