@{
    ViewData["Title"] = "Update Book Condition";
    
}

<div class="container d-flex flex-column align-items-center justify-content-center mt-5" style="height: calc(100vh - 200px);">
    @if (TempData["Message"] != null)
    {
        <div class="text-center">
            <h1 class="text-light">@TempData["Message"]</h1>
            <a href="/Home/ListedBooks" class="btn bg-light text-dark mt-3">OK</a>
        </div>
    }
    else{
        <h2 class="text-light text-center mb-4">Update Condition for "@ViewBag.BookTitle"</h2>

        <h5 class="text-light mb-3">Current Condition: <span class="text-light">@ViewBag.CurrentCondition</span></h5>

    

        <form method="post" asp-action="UpdateCondition" asp-controller="Home">
            <input type="hidden" name="bookId" value="@ViewBag.BookId" />

            <div class="mb-3 text-center d-flex justify-content-center">
                <input type="text" class="form-control text-center" name="newCondition" placeholder="Enter New Condition" required style="max-width: 325px;">
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn bg-light text-dark">Update Condition</button>
            </div>
        </form>
    }
</div>
